<h2>Log in</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <!-- <%= f.label :email %><br /> -->
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <!-- <%= f.label :password %><br /> -->
    <%= f.password_field :password, autocomplete: "off", label: "ContraseÃ±a" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me, label: "recordarme" %>
      <!-- <%= f.label :recordarme %> -->
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "Entrar" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

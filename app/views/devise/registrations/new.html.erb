<h2>Registrarse</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field">
    <!-- <%= f.label :email %><br /> -->
    <%= f.email_field :email, autofocus: true, required: true, label: "Email" %>
  </div>

  <div class="field">
    <!-- <%= f.label :nombre %><br /> -->
    <%= f.text_field :nombre, required: true, label: "Nombre"%>
  </div>

  <div class="field">
    <!-- <%= f.label :apellido %><br /> -->
    <%= f.text_field :apellido, required: true, labe: 'Apellido'%>
  </div>

  <div class="field">
    <!-- <%= f.label :id_tipo %><br /> -->
    <%= f.select :id_tipo, TIPOS_ID.each_with_index.map{ |k,i| [k,i] }, required: true, label: "Tipo de identificación" %>
  </div>

  <div class="field">
    <!-- <%= f.label :número %><br /> -->
    <%= f.number_field :id_num, required: true, label: "Número"%>
  </div>

  <div class="field">
    <!-- <%= f.label :teléfono %><br /> -->
    <%= f.number_field :telefono , label: "Número de teléfono"%>
  </div>

  <div class="field">
    <!-- <%= f.label :institución_o_emprendimiento %><br /> -->
    <%= f.text_field :institucion, required: true, label: "Institución o emprendimiento"%>
  </div>

  <div class="field">
    <!-- <%= f.label :contraseña %> -->
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> caracteres como mínimo)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", label: "Contraseña" %>
  </div>

  <div class="field">
    <!-- <%= f.label :confirmar_contraseña %><br /> -->
    <%= f.password_field :password_confirmation, autocomplete: "off", label: "Confirmá la contraseña" %>
  </div>

  <div class="actions">
    <%= f.submit "Registrarse" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

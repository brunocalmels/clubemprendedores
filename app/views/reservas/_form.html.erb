<%= bootstrap_form_for(@reserva, local: true) do |form| %>
  <% if reserva.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reserva.errors.count, "error") %> no permitieron guardar esta reserva:</h2>

      <ul>
      <% reserva.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.datetime_select :start_time, id: :reserva_start_time, label: "Empieza" %>
  </div>

  <div class="field">
    <%= form.datetime_select :end_time, id: :reserva_end_time, label: "Termina" %>
  </div>

  <div class="field">
    <h4>Invitados</h4>
  <%= form.fields_for :invitados do |invitado_form| %>
    <%= render 'invitado_fields', f: invitado_form %>
  <% end %>
  <!-- TODO: No estÃ¡ andando esto (Agregar nuevos invitado_fields para nuevos invitados) -->
  <%= link_to_add_association 'Agregar invitado', form, :invitados, partial: 'invitado_fields' %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>

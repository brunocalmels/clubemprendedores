<div class="reserva_del_dia">
  <% if reserva.user == current_user %>
    <%= link_to edit_reserva_path(reserva) do %>
      <%= reserva.finalidad %>
      <%= reserva.user.nombre %>
      <%= reserva.user.apellido %>
      <% if reserva.invitados.count > 0 %>
      + <%= reserva.invitados.count %>
      <% end %>
      (<%= reserva.hora_comienzo %> hs -
      <%= reserva.hora_fin %> hs)
    <% end %>
  <% else %>
    <%= reserva.finalidad %>
    <%= reserva.user.nombre %>
    <%= reserva.user.apellido %>
    <% if reserva.invitados.count > 0 %>
      + <%= reserva.invitados.count %>
    <% end %>
    (<%= reserva.hora_comienzo %> hs -
    <%= reserva.hora_fin %> hs)
  <% end %>
</div>
